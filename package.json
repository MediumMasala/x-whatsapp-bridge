{
  "name": "x-whatsapp-bridge",
  "version": "1.0.0",
  "private": true,
  "description": "X/Twitter to WhatsApp bridge service for TAL",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:nextjs": "npm run dev -w packages/nextjs",
    "dev:express": "npm run dev -w packages/express",
    "build:nextjs": "npm run build -w packages/nextjs",
    "build:express": "npm run build -w packages/express",
    "start:nextjs": "npm run start -w packages/nextjs",
    "start:express": "npm run start -w packages/express",
    "test": "npm run test -w packages/shared",
    "lint": "eslint packages/*/src --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}
